<Page x:Class="Kursovaya.Pages.PagesAuth.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovaya.Pages.PagesAuth"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Orientation="Horizontal">
            <ToggleButton x:Name="NewEmpBtn" Content="Новый пользователь" Style="{StaticResource AuthBtn}" Checked="NewEmpBtn_Checked" Margin="0,0,90,0"/>
            <ToggleButton x:Name="NewAdmBtn" Content="Новый администратор" Style="{StaticResource AuthBtn}" Checked="NewAdmBtn_Checked"/>
        </StackPanel>
        <Frame x:Name="Frm" NavigationUIVisibility="Hidden" Navigating="Frm_Navigating"/>
    </Grid>
</Page>
